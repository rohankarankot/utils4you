{
  "name": "tools-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm --workspace=apps/web run dev",
    "build": "npm --workspace=apps/web run build",
    "start": "npm --workspace=apps/web run start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "test": "npm --workspace=apps/web run test",
    "format": "prettier --write .",
    "sitemap": "npm --workspace=apps/web run next-sitemap",
    "studio:dev": "npm --workspace=packages/studio run dev"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "next": "^14.0.0",
    "prettier": "^3.0.0",
    "rxjs": "^7.8.2",
    "typescript": "^5.5.0",
    "vitest": "^1.0.0"
  }
}
